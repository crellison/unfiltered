extends layout

block content
  - function parseNumber(num) {return num >= 1000 ? num >= 1000000 ? Math.floor(num/100000)/10+'M' : Math.floor(num/100)/10+'K' : num}
  script(type='text/javascript').
    $(function() {
      var tweets = new twitter.PostList()
      window.tweets = tweets
    })
  .container
    .row
      .col-sm-6.col-xs-8
        h1= title
        #twitter-data
          span
            p.bump
              b= parseNumber(Tweets)
              |  TWEETS
            p.bump
              b= parseNumber(Following)
              |  FOLLOWING
            p.bump
              b= parseNumber(Followers)
              |  FOLLOWERS
            p
              b= parseNumber(Likes)
              |  LIKES
        .postContainer#madTweets
  script(type='text/javascript').
    twitter.mount()